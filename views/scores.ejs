<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="score.css">

</head>

<body>
    <header id="home">
        <%- include('./layout/nav.ejs') %>

            <h1>Mr. Quiz </h1>
    </header>
    <br>
    <main>
        <span class="heading">Score board</span>
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star"></span>
        <p>Your Scores.</p>
        <hr style="border:3px solid #f1f1f1">


        <% scores.forEach((score ,index) =>{ %>
            <% console.log(score.userresult); %>
                <div class="row">
                    <div class="side">
                        <div>
                            <%= `Score ${index+1}`%>
                        </div>
                    </div>
                    <div class="middle">
                        <div class="bar-container">
                            <div class="bar-<%=(scores.length)-index%>"></div>
                        </div>
                    </div>
                    <div class="side right">
                        <div>
                            <%= `${score.userresult}%`%>
                        </div>
                    </div>
                </div>
                <% }); %>
    </main>
</body>

</html>